<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#68c4af"
    tools:context="com.example.vamashikrishna.drawer.EventActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#808080">
    </View>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:id="@+id/music"
                android:text="Music"
                android:elevation="8dp"
                android:layout_marginBottom="50dp"
                android:textColor="#ffff"
                android:background="@drawable/random7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:id="@+id/dance"
                android:text="Dance"
                android:elevation="8dp"
                android:textColor="#33bedc"
                android:background="@drawable/random"
                android:layout_below="@+id/music"
                android:layout_marginBottom="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:text="Literary"
                android:id="@+id/literary"
                android:background="@drawable/random1"
                android:layout_marginBottom="50dp"
                android:layout_below="@+id/dance"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:id="@+id/drama"
                android:text="Drama"
                android:elevation="8dp"
                android:background="@drawable/random2"
                android:layout_below="@+id/literary"/>

            <Button
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:text="Fine Arts"
                android:elevation="8dp"
                android:background="@drawable/random3"
                android:id="@+id/fine_arts"
                android:layout_marginBottom="50dp"
                android:layout_alignTop="@+id/music"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <Button
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:elevation="8dp"
                android:text="informals"
                android:id="@+id/informals"
                android:textColor="#33bedc"
                android:background="@drawable/random4"
                android:layout_marginBottom="50dp"
                android:layout_below="@+id/fine_arts"
                android:layout_alignParentRight="true"/>
            <Button
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:elevation="8dp"
                android:shape = "oval"
                android:layout_below="@+id/informals"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="50dp"
                android:id="@+id/online"
                android:background="@drawable/random5"
                android:text="online"/>
            <Button
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:layout_below="@+id/online"
                android:background="@drawable/random6"
                android:layout_alignParentRight="true"
                android:id="@+id/photography"
                android:elevation="16dp"
                android:text="photography"
                android:textColor="#eeeeee"/>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>
